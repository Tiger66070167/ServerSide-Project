<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Management: Homepage</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/modal.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

  
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>

  <script src="/js/shared.js"></script>
  <script src="/js/index.js"></script>
  

</head>
<body>
  <%- include('partials/header') %>

  <div class="dashboard-container">
    <div class="welcome-header">
      <h2>Welcome, <%= username %>!</h2>
      <button class="create-task-btn" onclick="openModal('/new')">+ Create Task</button>
    </div>

    <div class="filters-container">
      <form method="GET" action="/" class="filter-form">
        <div class="filter-group">
          <label for="status">Status:</label>
          <select name="status" id="status" onchange="this.form.submit()">
            <option value="All" <%= filter === 'All' ? 'selected' : '' %>>All</option>
            <option value="Pending" <%= filter === 'Pending' ? 'selected' : '' %>>Pending</option>
            <option value="In Progress" <%= filter === 'In Progress' ? 'selected' : '' %>>In Progress</option>
            <option value="Completed" <%= filter === 'Completed' ? 'selected' : '' %>>Completed</option>
          </select>
        </div>

        <div class="filter-group category-filter-group">
            <label for="category">Category:</label>
            <div class="select-with-add">
                <select name="category_id" id="category" class="category-select" onchange="this.form.submit()">
                    <option value="">All</option>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat.category_id %>" <%= category_id == cat.category_id ? 'selected' : '' %>><%= cat.name %></option>
                    <% }) %>
                </select>

                <!-- Add Category Button -->
                <button type="button" class="add-category-btn" title="Add New Category">+</button>
                
                <!-- Category Actions (Edit/Delete) -->
                <div class="category-actions">
                    <button type="button" class="manage-categories-btn icon-button" title="Manage Categories">
                        <i class="fas fa-cog"></i>
                    </button>
                    <div class="category-actions-menu">
                        <!-- FIX: Add type="button" to prevent form submission -->
                        <button type="button" class="edit-category-btn" disabled>Edit Selected</button>
                        <button type="button" class="delete-category-btn delete" disabled>Delete Selected</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="filter-group">
          <label for="sort">Sort by:</label>
          <select name="sort" id="sort" onchange="this.form.submit()">
            <option value="">None</option>
            <option value="priority" <%= sort === 'priority' ? 'selected' : '' %>>Priority</option>
            <option value="due_date_asc" <%= sort === 'due_date_asc' ? 'selected' : '' %>>Due Date ↑</option>
            <option value="due_date_desc" <%= sort === 'due_date_desc' ? 'selected' : '' %>>Due Date ↓</option>
            <option value="az" <%= sort === 'az' ? 'selected' : '' %>>Title A-Z</option>
            <option value="za" <%= sort === 'za' ? 'selected' : '' %>>Title Z-A</option>
          </select>
        </div>
      </form>
    </div>

    <!-- Search Bar -->
    <div class="task-search">
      <i class="fas fa-search"></i>
      <input type="text" id="task-search-input" placeholder="Search tasks by title...">
    </div>

    <ul class="task-list">
        <% if (tasks && tasks.length > 0) { %>
            <% tasks.forEach(task => { %>
                <li class="task-item">
                    <!-- ส่วนหลักที่คลิกได้ -->
                    <a href="/<%= task.task_id %>/board" class="task-link">
                        <div class="task-header">
                            <strong><%= task.title %></strong>
                            <span class="task-status <%= task.status.toLowerCase().replace(' ', '-') %>"><%= task.status %></span>
                        </div>
                        <div class="task-meta">
                            <span>Due: <%= task.due_date ? new Date(task.due_date).toLocaleDateString() : 'N/A' %></span>
                            <span>Priority: <%= task.priority %></span>
                        </div>

                        <!-- Progress Indicator -->
                        <div class="task-progress">
                            <div class="progress-info">
                                <i class="fas fa-check-square"></i>
                                <span><%= task.done_lists || 0 %> / <%= task.total_lists || 0 %> Lists</span>
                            </div>
                            <% const progress = task.total_lists > 0 ? (task.done_lists / task.total_lists) * 100 : 0; %>
                            <div class="progress-bar">
                                <div class="progress-bar-fill" style="width: <%= progress %>%;"></div>
                            </div>
                        </div>
                    </a>
                    
                    <!-- Quick Edit Actions -->
                    <div class="task-actions">
                        <button class="icon-button" onclick="openModal('/edit/<%= task.task_id %>')" title="Edit Task">
                            <i class="fa-solid fa-pen"></i>
                        </button>
                        <!--  Quick Move To Archive -->
                        <button class="icon-button quick-move-archive-btn" data-task-id="<%= task.task_id %>" title="Move To Archive">
                            <i class="fa-solid fa-trash-can-arrow-up"></i>
                        </button>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="no-tasks">No tasks available.</li>
        <% } %>
    </ul>

    <div class="dashboard-links">
      <a href="/archive" class="dashboard-link">Archive</a>
    </div>
  </div>

  <%- include('partials/footer') %>

  <%- include('pop-up/modalContainer.ejs') %>

</body>
</html>
